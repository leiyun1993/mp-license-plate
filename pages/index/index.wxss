/**index.wxss**/
page {
    background-color: #f5f5f5;
    padding: 20rpx;
    box-sizing: border-box;
}

view {
    box-sizing: border-box;
}

.container {
    border-radius: 8rpx;
    background-color: #fff;
    width: 100%;
    padding: 20rpx;
}

.title {
    margin-bottom: 20rpx;
}

.btn {
    margin-top: 40rpx;
    width: 100%;
    background-color: #3c7ef6;
    color: #fff;
    border-radius: 8rpx;
    text-align: center;
    padding: 20rpx 0;
}

.base-hover {
    opacity: 0.75;
}

.custom {
    border: 1px solid #3c7ef6;
    border-radius: 8rpx;
    height: 40px;
    line-height: 40px;
}

.mt30 {
    margin-top: 30rpx;
}